<!--pages/waiting/waiting.wxml-->
<view class="page">
  <block wx:if="{{!isReturnResult}}">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="success" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">Submit successfully</view>
            <view class="weui-msg__desc">Waiting for results</view>
        </view>
      
        <view class="weui-loadmore">
            <view class="weui-loading"></view>
            <view class="weui-loadmore__tips">Loading...</view>
        </view>

        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__text">Copyright © 2018 hackinit</view>
            </view>
        </view>
    </view>
  </block>
  <block wx:else>
    <block wx:if="{{correctResult}}">
      <view class='title correct_title'>
        Congratulation!
      </view>
      <view class='description'>
        {{description}}
      </view>
      <image style="width: 100%; height: 300px;" src="{{tmpPath}}" ></image>
      <view class='photo'>
        <image wx:if="{{src}}" mode="widthFix" src="{{src}}"></image>
      </view>
      <view>
      </view>
    </block>
    <block wx:else>
      <view class="weui-msg__text-area">
        <view class="weui-msg__title">错了 智商呢</view>
      </view>
      <view class="btn-area">
        <button type="primary" bindtap="retakePhoto">重来</button>
      </view>
    </block>
  </block>
</view>