<!--pages/fail/fail.wxml-->
<!--pages/user/emailForm/fail.wxml-->
<view class="page">
    <view class="weui-msg">
        <view class="weui-msg__icon-area">
            <icon type="warn" size="93"></icon>
        </view>
        <view class="weui-msg__text-area">
            <view class="weui-msg__title">请求失败</view>
            <view class="weui-msg__desc">由于网络原因，无法更改您的绑定邮箱，请稍后重试</view>
        </view>
        <view class="weui-msg__opr-area">
            <view class="weui-btn-area">
                <button class="weui-btn" type='primary' bindtap='retry'>重新请求</button>
                <button class="weui-btn" bindtap='cancel'>取消</button>
            </view>
        </view>
        <view class="weui-msg__extra-area">
            <view class="weui-footer">
                <view class="weui-footer__text">Copyright © 2018 巧选校园</view>
            </view>
        </view>
    </view>
</view>